[extdiff]
cmd.ksdiff = ksdiff-wrapper
opts.ksdiff = hg
cmd.wdiff = sh
opts.wdiff = -c 'diff --unified "$@" | wdiff --diff-input --avoid-wraps --start-delete="[38;5;1m" --end-delete="[00m" --start-insert="[38;5;2m" --end-insert="[00m" | sed "s/^\(@@\( [+-][[:digit:]]*,[[:digit:]]*\)\{2\} @@\)$/[38;5;6m\1[00m/g" | less -FSRX' ''


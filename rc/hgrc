[alias]
; Edit the current repository's hgrc file.
# editrc = !$EDITOR `$HG root`/.hg/hgrc

; Pretty logs.
blog  = log --style=/home/zv/.mercurial/templates/map-cmdline.blog
olog  = blog -q
golog = olog --graph
plog  = log --style=/home/zv/.mercurial/templates/map-cmdline.plog
slog  = plog --stat
dlog  = slog --patch
show  = dlog --verbose --rev

; Make a new repo with some sensible defaults.
mkrepo = !$HG init "$1" && cd "$1" && \
  echo 'syntax: glob'  > .hgignore && \
  echo ''             >> .hgignore && \
  echo '.DS_Store'    >> .hgignore && \
  echo '*.pyc'        >> .hgignore && \
  echo '*.swp'        >> .hgignore && \
  echo '*.swo'        >> .hgignore && \
  echo '*.un~'        >> .hgignore && \
  echo '.ropeproject' >> .hgignore && \
  echo 'tags'         >> .hgignore && \
  echo "[paths]\n" >> .hg/hgrc

; Push only the current branch.
nudge = push --branch .

[bookmarks]
track.current = True

